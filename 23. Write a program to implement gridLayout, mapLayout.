public class LayoutExample {
    public static void main(String[] args) {
        // Simulating GridLayout
        System.out.println("GridLayout Simulation:");
        
        // 2x2 Grid (2 rows, 2 columns)
        System.out.println("[Button 1] [Button 2]");
        System.out.println("[Button 3] [Button 4]");
        
        System.out.println("\n--- End of GridLayout Simulation ---\n");

        // Simulating CardLayout
        System.out.println("CardLayout Simulation:");
        
        // Simulate flipping through "cards"
        System.out.println("Card 1: [Home Screen]");
        System.out.println("Card 2: [Settings Screen]");
        System.out.println("Card 3: [Profile Screen]");
        
        System.out.println("\n--- End of CardLayout Simulation ---");
    }
}
