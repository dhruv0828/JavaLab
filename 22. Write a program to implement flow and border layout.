public class LayoutExample {
    public static void main(String[] args) {
    
        System.out.println("FlowLayout Example:");
        System.out.print("[Button 1] ");
        System.out.print("[Button 2] ");
        System.out.print("[Button 3] ");
        System.out.println("[Button 4]");
        
        System.out.println("\n--- End of FlowLayout Simulation ---\n");
        
        System.out.println("BorderLayout Example:");
        System.out.println("[North: Button]");
        System.out.println("[West: Button]   [Center: Button]   [East: Button]");
        System.out.println("[South: Button]");
        
        System.out.println("\n--- End of BorderLayout Simulation ---");
    }
}
